<div class="row">
  <div class="container">
    <ul class="nav navbar-nav navbar-right">
  	<% if user_signed_in? %>
  		<li ><%= link_to 'Home', root_path %></li>
  		<li class="dropdown_user">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sesion de <%= current_user.email %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
  			<li><%= link_to 'Editar', edit_user_registration_path %> </li>
  			<li><%= link_to 'Cerrar Sesión', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
  	 <% else %>
  		<li><%= link_to 'Regístrate', new_user_registration_path %></li>
  		<li><%= link_to 'Iniciar Sesión', new_user_session_path %></li>
  	 <% end %>
    </ul>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('.dropdown_user').hover(function() {
        $(this).find('.dropdown-menu').first().stop(true, true).delay(150).slideDown();
    }, function() {
        $(this).find('.dropdown-menu').first().stop(true, true).delay(100).slideUp()
    });
})

</script>